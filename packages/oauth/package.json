{
  "name": "@unireq/oauth",
  "version": "1.0.0",
  "description": "OAuth Bearer authentication with JWT validation and auto-refresh for unireq",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "keywords": [
    "oauth",
    "bearer",
    "jwt",
    "authentication"
  ],
  "author": "Olivier Orabona",
  "license": "MIT",
  "dependencies": {
    "@unireq/core": "workspace:*",
    "@unireq/config": "workspace:*"
  },
  "peerDependencies": {
    "openid-client": "catalog:",
    "jose": "catalog:"
  },
  "peerDependenciesMeta": {
    "openid-client": {
      "optional": true
    },
    "jose": {
      "optional": true
    }
  },
  "devDependencies": {
    "typescript": "catalog:",
    "tsup": "catalog:",
    "vitest": "catalog:",
    "jose": "catalog:"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oorabona/unireq",
    "directory": "packages/oauth"
  },
  "bugs": {
    "url": "https://github.com/oorabona/unireq/issues"
  },
  "homepage": "https://github.com/oorabona/unireq/tree/main/packages/oauth"
}
